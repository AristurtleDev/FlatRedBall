<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0-ios</TargetFramework>
    <OutputType>Exe</OutputType>
    <SupportedOSPlatformVersion>11.2</SupportedOSPlatformVersion>
    <CodesignKey>iPhone Developer</CodesignKey>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>

  </PropertyGroup>
  <ItemGroup>
    <None Remove="Content\shader.xnb" />
  </ItemGroup>
  <ItemGroup>
    <BundleResource Include="Content\shader.xnb" />
  </ItemGroup>
  <ItemGroup>
    <Compile Include="Game1.cs" />
    <Compile Include="Program.cs" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="MonoGame.Content.Builder.Task" Version="3.8.1.303" />
    <PackageReference Include="MonoGame.Framework.iOS" Version="3.8.1.303" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Libraries\iOS\Debug\" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="FlatRedBalliOS">
      <HintPath>Libraries\iOS\Debug\FlatRedBalliOS.dll</HintPath>
    </Reference>
  </ItemGroup>
  <Target Name="RestoreDotnetTools" BeforeTargets="Restore">
    <Message Text="Restoring dotnet tools" Importance="High" />
    <Exec Command="dotnet tool restore" />
  </Target>
</Project>